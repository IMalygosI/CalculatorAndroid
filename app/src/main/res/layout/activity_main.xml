<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textTextView"
        android:layout_width="206dp"
        android:layout_height="50dp"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="32dp"
        android:textAlignment="viewEnd"
        android:textColor="#A4ACBD"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="407dp"
        android:layout_height="82dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/buttonPercent"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="#161616"
            android:text="%"
            android:textColor="#dd3a00"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints,Suspicious0dp"></Button>

        <Button
            android:id="@+id/buttonCE"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="#161616"
            android:text="CE"
            android:textColor="#dd3a00"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints,Suspicious0dp"></Button>

        <Button
            android:id="@+id/buttonC"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="#161616"
            android:text="C"
            android:textColor="#dd3a00"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints,Suspicious0dp"></Button>

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="#161616"
            android:text="Delete"
            android:textColor="#dd3a00"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/n3"
            tools:ignore="MissingConstraints,Suspicious0dp"></Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="407dp"
        android:layout_height="82dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/buttonInverse"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="#161616"
            android:text="1/x"
            android:textColor="#dd3a00"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints,Suspicious0dp"></Button>

        <Button
            android:id="@+id/buttonSquare"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="#161616"
            android:text="X²"
            android:textColor="#dd3a00"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints,Suspicious0dp"></Button>

        <Button
            android:id="@+id/buttonSqrt"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="#161616"
            android:text="²√х"
            android:textColor="#dd3a00"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints,Suspicious0dp"></Button>

        <Button
            android:id="@+id/Delit"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="#161616"
            android:text="/"
            android:textColor="#dd3a00"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/n3"
            tools:ignore="MissingConstraints,Suspicious0dp"></Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="407dp"
        android:layout_height="82dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/seven"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="#3f3e3c "
            android:text="7"
            android:textColor="@color/white"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints,Suspicious0dp"></Button>

        <Button
            android:id="@+id/ningh"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="#3f3e3c "
            android:text="8"
            android:textColor="@android:color/white"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints,Suspicious0dp"></Button>

        <Button
            android:id="@+id/nine"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="#3f3e3c "
            android:text="9"
            android:textColor="@android:color/white"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints,Suspicious0dp"></Button>

        <Button
            android:id="@+id/Umno"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="#161616"
            android:text="*"
            android:textColor="#dd3a00"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/n3"
            tools:ignore="MissingConstraints,Suspicious0dp"></Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="407dp"
        android:layout_height="82dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/four"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="#3f3e3c "
            android:text="4"
            android:textColor="@color/white"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints,Suspicious0dp"></Button>

        <Button
            android:id="@+id/five"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="#3f3e3c "
            android:text="5"
            android:textColor="@android:color/white"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints,Suspicious0dp"></Button>

        <Button
            android:id="@+id/six"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="#3f3e3c "
            android:text="6"
            android:textColor="@android:color/white"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints,Suspicious0dp"></Button>

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="#161616"
            android:text="-"
            android:textColor="#dd3a00"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/n3"
            tools:ignore="MissingConstraints,Suspicious0dp"></Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="407dp"
        android:layout_height="82dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/one"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="#3f3e3c "
            android:text="1"
            android:textColor="@color/white"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints,Suspicious0dp"></Button>

        <Button
            android:id="@+id/two"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="#3f3e3c "
            android:text="2"
            android:textColor="@android:color/white"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints,Suspicious0dp"></Button>

        <Button
            android:id="@+id/three"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="#3f3e3c "
            android:text="3"
            android:textColor="@android:color/white"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints,Suspicious0dp"></Button>

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="#161616"
            android:text="+"
            android:textColor="#dd3a00"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/n3"
            tools:ignore="MissingConstraints,Suspicious0dp"></Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="407dp"
        android:layout_height="82dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/buttonPlusMinus"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="#3f3e3c "
            android:text="+/-"
            android:textColor="@color/white"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints,Suspicious0dp"></Button>

        <Button
            android:id="@+id/nuull"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="#3f3e3c "
            android:text="0"
            android:textColor="@android:color/white"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints,Suspicious0dp"></Button>

        <Button
            android:id="@+id/comma"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="#3f3e3c "
            android:text=","
            android:textColor="@android:color/white"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints,Suspicious0dp"></Button>

        <Button
            android:id="@+id/ravno"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="#C74414"
            android:text="="
            android:textColor="@android:color/white"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/n3"
            tools:ignore="MissingConstraints,Suspicious0dp"></Button>
    </LinearLayout>

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="354dp"
        android:layout_height="70dp"
        android:ems="10"
        android:hint="0"
        android:inputType="text"
        android:textAlignment="viewEnd"
        android:textColorHint="#FFF"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/resultField"
        android:layout_width="354dp"
        android:layout_height="133dp"
        android:layout_marginBottom="32dp"
        android:textAlignment="viewEnd"
        android:textColor="#A4ACBD"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>